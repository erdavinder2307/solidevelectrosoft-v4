rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    // Public testimonials: read-only if published and not deleted
    match /testimonials/{doc} {
      allow read: if resource.data.isPublished == true && resource.data.isDeleted == false;
      // Admin writes: must be authenticated
      allow write: if request.auth != null;
    }

    // Temporary global rule (expires) â€” keep as-is for other collections until secured
    match /{document=**} {
      allow read, write: if request.time < timestamp.date(2026, 1, 14);
    }
  }
}
